{
  "manifest_version": 2,
  "name": "Website Tracker",
  "version": "1.0",
  "description": "Track first- and third-party domains",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "storage",
    "notifications",
    "cookies",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "ext-libs/dexie.js",
      "js/store.js",
      "js/capture.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    }
  }
}